
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                        String       @id @default(auto()) @map("_id") @db.ObjectId
  name                      String
  email                     String       @unique
  password                  String?
  auth_provider             AuthProvider @default(CREDENTIALS)
  created_at                DateTime     @default(now())
  updated_at                DateTime     @updatedAt
  resetPasswordToken        String?
  resetPasswordTokenExpired DateTime?

  Diagnosis Diagnosis[]
}

model Diagnosis {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  tanaman     String
  hasil       String
  confidence  Float
  ciri        String[]         // Simpan ciri-ciri sebagai array of string
  solusi      String[]         // Rekomendasi penanganan
  imageUrl    String?          // Jika kamu simpan path/URL gambar
  createdAt   DateTime @default(now())

  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

enum AuthProvider {
  CREDENTIALS
  GOOGLE
}
